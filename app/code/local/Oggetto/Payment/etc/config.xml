<config>

    <modules>
        <Oggetto_Payment>
            <version>0.1.0</version>
        </Oggetto_Payment>
    </modules>

    <global>
        <models>
            <oggetto_payment>
                <class>Oggetto_Payment_Model</class>
            </oggetto_payment>
        </models>

        <helpers>
            <oggetto_payment>
                <class>Oggetto_Payment_Helper</class>
            </oggetto_payment>
        </helpers>

        <blocks>
            <oggetto_payment>
                <class>Oggetto_Payment_Block</class>
            </oggetto_payment>
        </blocks>

        <events>
            <sales_order_save_after>
                <observers>
                    <unique_sales_order_save_after>
                        <type>singleton</type>
                        <class>oggetto_payment/observer</class>
                        <method>saveOrderAfterPlace</method>
                    </unique_sales_order_save_after>
                </observers>
            </sales_order_save_after>
        </events>
    </global>

    <default>
        <payment>
            <oggetto_payment>
                <model>oggetto_payment/standard</model>
                <active>1</active>
                <api_secret>ZnVjayB0aGUgZHVjaw==</api_secret>
                <order_status>pending</order_status>
                <title>Oggetto Payment</title>
                <payment_action>sale</payment_action>
                <submit_url>http://edu.oggettoweb.ru/homework/payment/form.php</submit_url>
                <allowspecific>0</allowspecific>
                <sort_order>1</sort_order>
            </oggetto_payment>
        </payment>
    </default>

    <frontend>
        <routers>
            <oggetto_payment>
                <use>standard</use>
                <args>
                    <module>Oggetto_Payment</module>
                    <frontName>oggetto_payment</frontName>
                </args>
            </oggetto_payment>
        </routers>

        <layout>
            <updates>
                <oggetto_payment>
                    <file>oggetto_payment.xml</file>
                </oggetto_payment>
            </updates>
        </layout>
    </frontend>

    <phpunit>
        <suite>
            <modules>
                <Oggetto_Payment />
            </modules>
        </suite>
    </phpunit>

</config>